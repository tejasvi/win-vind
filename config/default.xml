<?xml version="1.0" encoding="utf-8"?>

<config>
    <binds>
        <func name="change_to_normal">Left(+)Esc|Right(+)Esc|Up(+)Esc|Down(+)Esc|F9</func>
        <func name="change_to_insert">i</func>
        <func name="change_to_visual">v</func>
        <func name="change_to_editor">I|G->I</func>
        <func name="change_to_command">:</func>

        <func name="select_all">V|Ctrl(+)V</func>

        <func name="move_left">h|Ctrl(+)h|BkSpace|Left</func>
        <func name="move_right">l|&#x20;|Right</func>
        <func name="move_up">k|-|g->k|Ctrl(+)p|Up</func>
        <func name="move_down">j|+|g->j|Ctrl(+)j|Ctrl(+)n|Down|Enter|Ctrl(+)m</func>

        <func name="jump_to_left">0|^|Home|g->0|g->^</func>
        <func name="jump_to_right">$|End|g->$</func>
        <func name="jump_to_top">g->g</func>
        <func name="jump_to_bottom">G</func>

        <func name="jump_to_xcenter">g->m|g->M</func>
        <func name="jump_to_ycenter">M</func>

        <func name="jump_to_any">f|F</func>
        <func name="jump_to_active_window">t|T</func>

        <func name="scroll_up">Ctrl(+)y</func>
        <func name="scroll_down">Ctrl(+)e</func>

        <func name="scroll_mid_up">Ctrl(+)u</func>
        <func name="scroll_mid_down">Ctrl(+)d</func>

        <func name="scroll_page_up">Ctrl(+)b</func>
        <func name="scroll_page_down">Ctrl(+)f</func>

        <func name="scroll_left">z->h|z(+)h</func>
        <func name="scroll_right">z->l|z(+)l</func>

        <func name="scroll_mid_left">z->H|z(+)H</func>
        <func name="scroll_mid_right">z->L|z(+)L</func>

        <func name="click_left">o|O</func>
        <func name="click_right">a|A</func>

        <func name="cb_copy">y|y->y|Y</func>
        <func name="cb_paste">p|P</func>
        <func name="cb_cut">d->d|D</func>
        <func name="cb_delete">x|Delete|X</func>

        <func name="sc_redo">Ctrl(+)r</func>
        <func name="sc_undo">u|U</func>

        <func name="switch_vdesktop_to_left">g->T</func>
        <func name="switch_vdesktop_to_right">g->t</func>

        <func name="search_pattern">/|?</func>

        <func name="close_current_window">Ctrl(+)w->q|Ctrl(+)w->c</func>
        <func name="switch_window">Ctrl(+)w->s</func>
        <func name="maximize_current_window">Ctrl(+)w->k|Ctrl(+)w->a</func>
        <func name="minimize_current_window">Ctrl(+)w->j|Ctrl(+)w->i</func>
        <func name="snap_current_window_to_left">Ctrl(+)w->h|Ctrl(+)w->&lt;</func>
        <func name="snap_current_window_to_right">Ctrl(+)w->l|Ctrl(+)w->&gt;</func>
        <func name="move_to_next_page">&gt;</func>
        <func name="move_to_prev_page">&lt;</func>
        <func name="change_to_edi_normal">Esc</func>
        <func name="change_to_edi_insert">i|I|G->I</func>
        <func name="change_to_edi_bkinsert">a|A</func>
        <func name="change_to_edi_nlinsert">o|O</func>
        <func name="change_to_edi_visual">v|V|Ctrl(+)V</func>

        <func name="edi_move_left">h|Ctrl(+)h|BkSpace|Left</func>
        <func name="edi_move_right">l|Space|Right</func>
        <func name="edi_move_up">k|-|g->k|Ctrl(+)P|Up</func>
        <func name="edi_move_down">j|+|g->j|Ctrl(+)j|Ctrl(+)n|Down|Enter|Ctrl(+)m</func>
    </binds>

    <commands>
        <cmd name="save_opened_file">w|w_f|w_a|w_c|up|wall</cmd>
        <cmd name="close_opened_file">q|qa|q!|qa!</cmd>
        <cmd name="close_current_window">cl|close</cmd>
        <cmd name="switch_window">sw|switch</cmd>
        <cmd name="maximize_current_window">max|on|only</cmd>
        <cmd name="minimize_current_window">min|hi|hide</cmd>
        <cmd name="snap_current_window_to_left">lsplit</cmd>
        <cmd name="snap_current_window_to_right">rsplit</cmd>
        <cmd name="start_shell">sh|shell</cmd>
        <cmd name="start_any_app">!OPTIONAL_COMMAND</cmd>
    </commands>
</config>